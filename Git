          echo "ðŸ” Running Sentry Engine on demo charter + event stream..."
          python sentry.py --charter charter.json --stream event_stream.jsonl --ledger demo_ledger.jsonl
          echo "--- Ledger Output ---"
          cat demo_ledger.jsonl


