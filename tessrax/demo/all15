        safe_match(evil_pattern, "a"*10000, timeout=0.1)

def test_regex_safe_pattern():
    assert safe_match(r"\bnow\b", "now or later")
    
    if __name__ == "__main__":
    try:
        test_regex_timeout()
        test_regex_safe_pattern()
        print("âœ… Regex safety tests passed.")
