#!/usr/bin/env python3
"""
Institutional Phase Diagram Visualizer
--------------------------------------
Plots œÉ (entropy production) vs Œ¶s (scar flux) colored by institutional health H.

Each point = one monitoring cycle from institutional_health_log.jsonl.
Reveals three characteristic zones:
  - Adaptive band: œÉ moderate, Œ¶s steady  ‚Üí green
  - Chaotic spike: œÉ high, Œ¶s low         ‚Üí red
  - Rigid freeze: œÉ ~0, Œ¶s ~0             ‚Üí blue
"""

import json, pandas as pd, matplotlib.pyplot as plt
from pathlib import Path
import matplotlib.colors as mcolors

LOG_FILE = Path("institutional_health_log.jsonl")
OUT_FILE = Path("institutional_phase_diagram.png")

def load_log():
    with open(LOG_FILE) as f:
        lines = [json.loads(l) for l in f]
    df = pd.DataFrame(lines)
    df["timestamp"] = pd.to_datetime(df["timestamp"])
    return df

def plot_phase(df):
    cmap = mcolors.LinearSegmentedColormap.from_list(
        "healthmap",
        [(0.0, "red"), (0.5, "yellow"), (1.0, "green")]
    )
    norm = mcolors.Normalize(vmin=df["H"].quantile(0.05),
                              vmax=df["H"].quantile(0.95))
    plt.figure(figsize=(7,6))
    sc = plt.scatter(df["œÉ"], df["Œ¶s"], c=df["H"], cmap=cmap, norm=norm, s=60, alpha=0.8)
    plt.colorbar(sc, label="Institutional Health H = Œ¶s/(œÉ+Œµ)")
    plt.xlabel("Entropy Production œÉ (rate of disorder)")
    plt.ylabel("Scar Flux Œ¶s (reconciliations per Œît)")
    plt.title("Tessrax Institutional Phase Diagram")
    plt.grid(alpha=0.3)
    plt.tight_layout()
    plt.savefig(OUT_FILE, dpi=300)
    print(f"‚úÖ Phase diagram saved ‚Üí {OUT_FILE}")

if __name__ == "__main__":
    df = load_log()
    if len(df) < 3:
        print("Not enough data yet. Run scar_flux_monitor.py for a few cycles first.")
    else:
        plot_phase(df)


